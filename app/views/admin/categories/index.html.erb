<h1><%= t "index" %></h1>
<table>
  <thead>
    <tr>
      <th><%= t "name" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= link_to t("show"), admin_category_path(category)%></td>
      <td><%= link_to t("edit"), edit_admin_category_path(category) %></td>
      <td><%= link_to t("destroy"), [:admin, category], method: :delete, data: {confirm: t("sure")} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to t("category.new"), new_admin_category_path %>
