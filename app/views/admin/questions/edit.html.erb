<% provide :title, t("edit_question") %>
<h1><%= t :edit_question %></h1>
<%= form_for [:admin, @question] do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :answers %>
  <%= f.fields_for :answers do |answer| %>
    <%= render "answer_fields", f: answer %>
  <% end %>
  <p><%= link_to_add_fields t("add_answer"), f, :answers %></p>
  <%= f.submit t(:update_question), class: "btn btn-primary" %>
<% end %>
