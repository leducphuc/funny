<% provide :title, @title %>
<div class="row">  
  <aside class="col-md-6">
    <section class="user_info">
      <h2>
        <%= gravatar_for @user %>
        <%= @user.name %><br>
        <%= @user.email %><br>
        <%= @user.created_at %>
      </h2>
    </section>
    <%= render "shared/stats" %>
  </aside>
</div>
<div class="col-md-8">
  <h3><%= @title %></h3>
  <% if @users.any? %>
    <ul class="users follow">
      <%= render @users %>
    </ul>
    <%= will_paginate @users %>
  <% end %>
</div>
